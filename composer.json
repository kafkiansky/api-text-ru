{
    "name": "kafkiansky/api-text-ru",
    "description": "API text.ru interaction provider.",
    "keywords": [
        "api",
        "text.ru"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7",
        "symfony/var-dumper": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "Kafkiansky\\TextRu\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kafkiansky\\TextRu\\Api\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "v.zanfir",
            "email": "vadimzanfir@gmail.com"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "lint": "./vendor/bin/psalm"
    }
}
